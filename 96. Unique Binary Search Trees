//Recursive method, cost too much time
class Solution {
    public int numTrees(int n) {
        return helper(0, n - 1);
    }
    
    public int helper(int begin, int end){
        // if(begin > end){
        //     return 0;
        // }
        if(begin >= end){
            return 1;
        }
        int res = 0;
        for(int i = begin; i <= end; i ++){
            int left = helper(begin, i - 1);
            int right = helper(i + 1, end);
            res = res + left * right;
        }
        return res;
    }
}

//Recuriive with dp
class Solution {
    private int[][] table;
    public int numTrees(int n) {
        table = new int[n][n];
        for(int[] tmp: table){
            Arrays.fill(tmp, -1);
        }
        
        
        return helper(0, n - 1);
    }
    
    public int helper(int begin, int end){
        // if(begin > end){
        //     return 0;
        // }
        if(begin >= end){
            return 1;
        }
        if(table[begin][end] != -1){
            return table[begin][end];
        }

        int res = 0;
        for(int i = begin; i <= end; i ++){
            int left = helper(begin, i - 1);
            int right = helper(i + 1, end);
            res = res + left * right;
        }
        table[begin][end] = res;
        return res;
    }
}

//actaully, we could use only a 1-d array to memorize the table
class Solution {
    public int poorPigs(int buckets, int minutesToDie, int minutesToTest) {
        if(buckets <= 1){
            return 0;
        }
        int n = minutesToTest / minutesToDie + 1;
        int total = n;
        int i = 1;
        while(total < buckets){
            total *= n;
            i ++;
        }
        return i;
    }
}
